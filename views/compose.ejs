<%- include('partials/header') -%>

    <h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="postTitle" class="form-control" autocomplete="off" />
            <label>Post</label>
            <textarea type="text" rows="5" cols="30" name="postContent" class="form-control" autocomplete="off"></textarea>
        </div>
        <button type="submit" class="btn btn-primary ">Publish</button>
    </form>

    <%- include('partials/footer') -%>